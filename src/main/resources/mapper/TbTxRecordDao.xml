<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tcbv.zhaohui.moon.dao.TbTxRecordDao">

    <resultMap type="tcbv.zhaohui.moon.entity.TbTxRecord" id="TbTxRecordMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="gameType" column="game_type" jdbcType="INTEGER"/>
        <result property="singleAndDouble" column="single_and_double" jdbcType="INTEGER"/>
        <result property="raseAndFall" column="rase_and_fall" jdbcType="INTEGER"/>
        <result property="eventId" column="event_id" jdbcType="VARCHAR"/>
        <result property="eventResult" column="event_result" jdbcType="VARCHAR"/>
        <result property="txHash" column="tx_hash" jdbcType="VARCHAR"/>
        <result property="turns" column="turns" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="amount" column="amount" jdbcType="NUMERIC"/>
    </resultMap>

    <sql id="SQL_PARAM">
        id, user_id, game_type, single_and_double, rase_and_fall, event_id, event_result, tx_hash, turns, create_time, amount
    </sql>
    <!-- 通过ID查询单条数据 -->
    <select id="queryById" resultMap="TbTxRecordMap">
        select
        <include refid="SQL_PARAM"/>
        from tb_tx_record
        where id = #{id}
    </select>
    <select id="findByUserDraw" resultMap="TbTxRecordMap">
        select
        <include refid="SQL_PARAM"/>
        from tb_tx_record
        where  user_id = #{userId} and game_type=#{gameType} order by create_time desc
    </select>
    <select id="queryByIdAndGameInfo" resultMap="TbTxRecordMap">
        select <include refid="SQL_PARAM"/>
        from tb_tx_record
        where user_id = #{userId} and game_type = #{gameType} and turns = #{turns}
    </select>
    <select id="findTurnsGameInfo" resultMap="TbTxRecordMap">
        select <include refid="SQL_PARAM"/>
        from tb_tx_record
        where turns = #{turns}
          and game_type = #{gameType}
    </select>

    <select id="isBetOn" resultMap="TbTxRecordMap">
        select <include refid="SQL_PARAM"/>
        from tb_tx_record
        where turns = #{turns}
        and game_type = #{gameType}
        and user_id = #{userId}
    </select>

    <select id="betNumber" resultType="java.lang.Double">
        select IFNULL(sum(amount), 0) as total_bet
        from tb_tx_record
        where game_type = #{gameType}
        and turns = #{turns}
        <if test="gameType != null and gameType == 1">
            and single_and_double = #{betType}
        </if>
        <if test="gameType != null and gameType == 2">
            and rase_and_fall = #{betType}
        </if>
    </select>
    <select id="winnerList" resultMap="TbTxRecordMap">
        select <include refid="SQL_PARAM"/>
        from tb_tx_record
        where turns = #{turns}
            and game_type = #{gameType}
            <if test="gameType != null and gameType == 1">
                and (single_and_double &lt;&gt; 0 and (2 - (single_and_double % 2)) = #{winner})
            </if>
            <if test="gameType != null and gameType == 2">
                and rase_and_fall = #{winner}
            </if>
    </select>
    <select id="loserList" resultMap="TbTxRecordMap">
        select <include refid="SQL_PARAM"/>
        from tb_tx_record
        where turns = #{turns}
            and game_type = #{gameType}
            <if test="gameType != null and gameType == 1">
                and (single_and_double &lt;&gt; 0 and ((single_and_double % 2) + 1) = #{winner})
            </if>
            <if test="gameType != null and gameType == 2">
                and rase_and_fall = #{winner}
            </if>
    </select>

    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_tx_record(id,user_id,game_type,single_and_double,rase_and_fall,event_id,event_result,tx_hash,turns,create_time,amount)
        values (#{id},#{userId},#{gameType},#{singleAndDouble},#{raseAndFall},#{eventId},#{eventResult},#{txHash},#{turns},#{createTime},#{amount})
    </insert>

    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_tx_record(id,user_id,game_type,single_and_double,rase_and_fall,event_id,event_result,tx_hash,turns,create_time,amount)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.userId},#{entity.gameType},#{entity.singleAndDouble},#{entity.raseAndFall},#{entity.eventId},#{entity.eventResult},#{entity.txHash},#{entity.turns},#{entity.createTime},#{entity.amount})
        </foreach>
    </insert>


    <!-- 更新数据 -->
    <update id="update">
        update tb_tx_record
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="gameType != null and gameType != ''">
                game_type = #{gameType},
            </if>
            <if test="singleAndDouble != null and singleAndDouble != ''">
                single_and_double = #{singleAndDouble},
            </if>
            <if test="raseAndFall != null and raseAndFall != ''">
                rase_and_fall = #{raseAndFall},
            </if>
            <if test="eventId != null and eventId != ''">
                event_id = #{eventId},
            </if>
            <if test="eventResult != null and eventResult != ''">
                event_result = #{eventResult},
            </if>
            <if test="txHash != null and txHash != ''">
                tx_hash = #{txHash},
            </if>
            <if test="turns != null and turns != ''">
                turns = #{turns},
            </if>
            <if test="createTime != null and createTime != ''">
                create_time = #{createTime},
            </if>
            <if test="amount != null and amount != ''">
                amount = #{amount},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_tx_record where id = #{id}
    </delete>
</mapper>