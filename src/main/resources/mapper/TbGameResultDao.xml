<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tcbv.zhaohui.moon.dao.TbGameResultDao">


    <!-- 通过ID查询单条数据 -->
    <select id="queryById" resultType="tcbv.zhaohui.moon.entity.TbGameResult">
        select
            id,game_type,single_and_double,rase_and_fall,event_id,event_result,turns
        from tb_game_result
        where id = #{id}
    </select>
    <select id="findGameTypeNumber"  resultType="java.lang.Integer">
        select
            max(turns)
        from tb_game_result
        where game_type = #{gameType}
    </select>

    <!--新增数据-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_game_result(id,game_type,single_and_double,rase_and_fall,event_id,event_result,turns)
        values (#{id},#{gameType},#{singleAndDouble},#{raseAndFall},#{eventId},#{eventResult},#{turns})
    </insert>

    <!-- 批量新增数据 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_game_result(id,game_type,single_and_double,rase_and_fall,event_id,event_result,turns)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.gameType},#{entity.singleAndDouble},#{entity.raseAndFall},#{entity.eventId},#{entity.eventResult},#{entity.turns})
        </foreach>
    </insert>


    <!-- 更新数据 -->
    <update id="update">
        update tb_game_result
        <set>
            <if test="id != null and id != ''">
                id = #{id},
            </if>
            <if test="gameType != null and gameType != ''">
                game_type = #{gameType},
            </if>
            <if test="singleAndDouble != null and singleAndDouble != ''">
                single_and_double = #{singleAndDouble},
            </if>
            <if test="raseAndFall != null and raseAndFall != ''">
                rase_and_fall = #{raseAndFall},
            </if>
            <if test="eventId != null and eventId != ''">
                event_id = #{eventId},
            </if>
            <if test="eventResult != null and eventResult != ''">
                event_result = #{eventResult},
            </if>
            <if test="turns != null and turns != ''">
                turns = #{turns},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_game_result where id = #{id}
    </delete>
</mapper>