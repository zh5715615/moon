<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tcbv.zhaohui.moon.dao.TbUserDao">

    <resultMap type="tcbv.zhaohui.moon.entity.TbUser" id="TbUserMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="token" column="token" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="promoCode" column="Promo_Code" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 通过ID查询单条数据 -->
    <select id="queryByAddress" resultMap="TbUserMap">
        select
            id,address,create_time,token,Promo_Code,parent_id
        from tb_user
        where address = #{address}
    </select>
    <select id="maxPromoCode" resultType="java.lang.Integer">
        select
           max(Promo_Code)
        from tb_user
    </select>
    <select id="promoCodeFindUserInfo" resultMap="TbUserMap">
        select
            id,address,create_time,token,Promo_Code,parent_id
        from tb_user
        where Promo_Code = #{promoCode}
    </select>
    <select id="queryById" resultMap="TbUserMap">
        select
            id,address,create_time,token,Promo_Code,parent_id
        from tb_user
        where id = #{userId}
    </select>


    <!--新增数据-->
    <insert id="insert">
        insert into tb_user(id,address,token,create_time,Promo_Code)
        values (#{id},#{address},#{token},now(),#{promoCode})
    </insert>


    <!-- 更新数据 -->
    <update id="update">
        update tb_user
        <set>
            <if test="token != null and token != ''">
                token = #{token},
            </if>
            <if test="parentId != null and parentId != ''">
                parent_Id = #{parentId},
            </if>
            <if test="promoCode != null and promoCode != ''">
                Promo_Code = #{promoCode},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_user where id = #{id}
    </delete>
</mapper>